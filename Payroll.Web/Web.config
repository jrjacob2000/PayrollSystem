<configuration>
  
  <appSettings>
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None"/>
  </appSettings>
    <system.web>
      
      <compilation debug="true" targetFramework="4.5" />
      <httpRuntime targetFramework="4.5" />
      <authentication mode="Forms">
        <forms loginUrl="~/Pages/Public/Login.aspx" name=".ASPXFORMSAUTH"  defaultUrl ="~/Pages/Authenticated/Default.aspx"/>
      </authentication>
      
      <authorization>
        <deny users="?"/>
      </authorization>
      
    </system.web>
  <connectionStrings>
    <add name="Payroll.DataAccess.Properties.Settings.PayrollConnectionString"
          connectionString="Data Source=JONATHAN-PC\SQLEXPRESS;Initial Catalog=Payroll;Integrated Security=True"
          providerName="System.Data.SqlClient" />
  </connectionStrings>
  <location path ="Styles">
    <system.web>
      <authorization>
        <allow users="*"></allow>
      </authorization>
    </system.web>
  </location>
  <location path ="Scripts">
    <system.web>
      <authorization>
        <allow users="*"></allow>
      </authorization>
    </system.web>
  </location>
 
</configuration>
